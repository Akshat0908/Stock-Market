# Stock Market Data Pipeline Environment Variables
# Copy this file to .env and fill in your actual values

# Alpha Vantage API Configuration
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Stock Symbols to Fetch (comma-separated)
STOCK_SYMBOLS=AAPL,MSFT,GOOGL,AMZN,TSLA,NVDA,META,BRK.A,JPM,V

# PostgreSQL Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=stockmarket
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow

# Airflow Configuration
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin

# Fernet Key for Airflow (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your_fernet_key_here

# Optional: Custom API Configuration
# ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# Optional: Pipeline Configuration
# PIPELINE_SCHEDULE=0 18 * * 1-5  # Cron expression for pipeline schedule
# MAX_RETRIES=3
# RETRY_DELAY_MINUTES=5

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FORMAT=json
